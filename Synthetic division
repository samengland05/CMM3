#Here is code for snythetic division when needed
import numpy as np

def synthetic_division (a,t):
    n=len(a)
    q=np.zeros(n-1)
    r=a[0]
    
    for i in range(1,n):
        q[i-1]=r
        r=a[i]+r*t
        
    return q,r

coeffs=[2,15,-8]
t=3

q,r = synthetic_division(coeffs,t)

print("Polynomial coefficients:", coeffs)
print(f"Dividing by (x-{t})")
print("Quotient coefficients:",q)
print("Remainder:", r)
